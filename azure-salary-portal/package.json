{
  "name": "azure-salary-portal",
  "version": "1.0.0",
  "description": "Azure Salary Slip Portal - Serverless employee payslip management",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && ng serve",
    "dev:backend": "cd backend && func start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && ng build",
    "build:backend": "cd backend && dotnet build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && ng test --watch=false",
    "test:backend": "cd backend && dotnet test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/azure-salary-portal.git"
  },
  "keywords": [
    "azure",
    "payslip",
    "salary",
    "serverless",
    "angular",
    "functions"
  ],
  "author": "Your Name",
  "license": "MIT"
}